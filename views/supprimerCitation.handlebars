{{> enTete}}
{{> menu}}

<h1>Supprimer une citation</h1>

<div>
  <p>
    Il y a actuellement {{nbCitation}} citations enregistrées.
  </p>

  <table>
      <tr>
          <th>Nom de l'enseignant</th>
          <th>Libellé</th>
          <th>Date</th>
          <th>Moyenne des notes</th>
          <th>Supprimer ?</th>
      </tr>
      {{#each listeCitation}}
        <tr>
            <td>{{this.per_prenom}} {{this.per_nom}}</td>
            <td>{{this.cit_libelle}}</td>
            <td>{{this.cit_date}}</td>
            <td>{{this.cit_moy}}</td>
            <td><a href="/supprimerCitationOk/{{this.cit_num}}"><img title="Cliquez pour supprimer" src="/image/erreur.png"></a></td>

        </tr>
      {{/each}}
  </table>
</div>
